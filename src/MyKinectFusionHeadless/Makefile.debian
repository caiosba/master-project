OBJFILES = obj/device_memory.o obj/error.o obj/initialization.o obj/main.o obj/ColorVolume.o obj/FaceDetection.o obj/Image.o obj/MarchingCubes.o obj/Mesh.o obj/MyCVPointCloud.o obj/MyPointCloud.o obj/Reconstruction.o obj/TsdfVolume.o obj/HeadPoseEstimator/CRTree.o obj/HeadPoseEstimator/CRForestEstimator.o obj/HeadPoseEstimator/HeadPoseEstimator.o obj/cuda/colors.o obj/cuda/estimate_combined.o obj/cuda/extract.o obj/cuda/image_generator.o obj/cuda/maps.o obj/cuda/marching_cubes.o obj/cuda/normals_eigen.o obj/cuda/ray_caster.o obj/cuda/tsdf_volume.o obj/Viewers/MyGLImageViewer.o obj/Viewers/MyGLCloudViewer.o obj/Mediators/ColoredReconstructionMediator.o obj/Mediators/HeadPoseEstimationMediator.o obj/Mediators/MeshGenerationMediator.o obj/VolumetricData.o obj/Viewers/shader.o obj/Viewers/glm.o obj/cuda/bilateral_pyrdown.o

